def start
  puts "Welcome to Tic-tac-toe!"
  puts "Would you like to play a 0, 1, or 2 player game?"

  game_type = gets.strip

  case game_type
  when "0"
    Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new).play

end
